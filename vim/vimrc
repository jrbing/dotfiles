" Version specific {{{2

  if v:version >= 800
    " True color support
    set termguicolors
  endif

  if v:version >= 730
    set norelativenumber
    set undofile
    set undoreload=10000
    set undodir=$HOME/.vim/tmp/undo//     " undo files
    set colorcolumn=+1
  endif

