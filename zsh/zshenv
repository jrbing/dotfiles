#
# Environment variables.
#

# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ "$SHLVL" -eq 1 && ! -o LOGIN && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

export DOTFILES=${HOME}/.dotfiles

#
# OS Specific Settings
#

case $OSTYPE in
  (darwin*)
    eval "$("${HOME}"/.dotfiles/bin/valet init -)"                                 # Setup completion for valet

    export JAVA_HOME=$(/usr/libexec/java_home)                                     # Set JAVA_HOME
    export EDITOR='vim'
    export VISUAL='mvim -f'
    export LC_ALL=en_US.UTF-8
    export LANG=en_US.UTF-8
    export CHEATCOLORS=true
    export NVIM_TUI_ENABLE_TRUE_COLOR=1

    [[ -d "/opt/go" ]] && export GOPATH=/opt/go && export PATH="$PATH:/opt/go/bin" # GOPATH

    # Setup GPG Agent
    if test -f ~/.gnupg/.gpg-agent-info -a -n "$(pgrep gpg-agent)"; then
      source ~/.gnupg/.gpg-agent-info
      export GPG_AGENT_INFO
    else
      eval $(/usr/local/bin/gpg-agent --daemon ~/.gnupg/.gpg-agent-info)
    fi

  ;;
  (linux*)
    eval "$("$HOME"/.dotfiles/bin/valet init -)"
    export LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD         # Set colors for ls
    export PATH=$PATH:/sbin:/usr/sbin
  ;;
  (solaris*)
    export DISABLE_LS_COLORS=true
    export PATH=$PATH:/usr/cluster/bin
    export PATH=$PATH:/sbin
  ;;
esac

#
# Use .localrc for local system specific settings
#

if [[ -f ~/.localrc ]]; then
  source ~/.localrc
fi
