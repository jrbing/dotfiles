#!/bin/sh
# Settings specific to OSX

export JAVA_HOME=$(/usr/libexec/java_home)
export EDITOR='vim'
export VISUAL='mvim -f'
#export LC_CTYPE="utf-8"

#
# PATH
#
[[ -d $DOTFILES/zsh/fasd ]] && export PATH="$PATH:$DOTFILES/zsh/fasd"             # fasd
[[ -d /usr/local/share/npm/bin ]] && export PATH="$PATH:/usr/local/share/npm/bin" # NPM
[[ -d /usr/local/heroku ]] && export PATH="$PATH:/usr/local/heroku/bin"           # Heroku Toolbelt

#
# Aliases
#
alias z='fasd_cd -d'                              # Alias for FASD
alias flush-dns="sudo killall -HUP mDNSResponder" # DNS
