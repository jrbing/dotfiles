#!/usr/bin/env bash
# Usage: valet update
# Summary: Update dotfiles from github
# Help: Use this command to pull down the most recent copy of
# my dotfiles

set -e

# Source generic bash functions
source "$DOTFILES/share/lib/bash-functions.sh"

#
# Pull down updates to dotfiles from Github
#
update_dotfiles="cd $DOTFILES && git pull origin master > /dev/null 2>&1 && git submodule update --init --recursive > /dev/null 2>&1"
update_vim_plugins="vim +BundleUpdate +qall > /dev/null 2>&1"

spininfo "Updating dotfiles" "${update_dotfiles}"
spininfo "Updating vim plugins" "${update_vim_plugins}"
