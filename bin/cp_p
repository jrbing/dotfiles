#!/usr/bin/env sh
# Note: This only works on linux systems with strace installed.
case $(uname) in
  Darwin*)
    echo "Sorry, this only works in Linux"
  ;;
  Linux*)
    cp_p()
    {
      strace -q -ewrite cp -- "${1}" "${2}" 2>&1 \
        | awk '{
          count += $NF
              if (count % 10 == 0) {
                  percent = count / total_size * 100
                  printf "%3d%% [", percent
                  for (i=0;i<=percent;i++)
                    printf "="
                  printf ">"
                  for (i=percent;i<100;i++)
                    printf " "
                  printf "]\r"
              }
            }
            END { print "" }' total_size=$(stat -c '%s' "${1}") count=0
    }
  ;;

esac
