#!/usr/bin/env bash
#===============================================================================
# vim: softtabstop=4 shiftwidth=4 expandtab fenc=utf-8 spelllang=en
#===============================================================================
#
#          FILE: sdcli
#
#   DESCRIPTION: Wrapper script for SQLDeveloper CLI tool on OSX
#
#===============================================================================

set -e

if [[ -x /Applications/SQLDeveloper.app/Contents/Resources/sqldeveloper/sqldeveloper/bin/sdcli ]]; then
    cd /Applications/SQLDeveloper.app/Contents/Resources/sqldeveloper/sqldeveloper/bin && ./sdcli "${@}"
else
    echo "The sdcli executable was not found or does not have the correct permissions"
    echo "Please check /Applications/SQLDeveloper.app/Contents/Resources/sqldeveloper/sqldeveloper/bin"
fi
